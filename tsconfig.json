{
  "compilerOptions": {
    // Target ES2018 for Screeps compatibility (supports optional chaining)
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    
    // Module resolution for Node.js compatibility
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    // Strict type checking for better code quality
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    
    // Output configuration optimized for Screeps
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    
    // Advanced TypeScript options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    
    // Screeps-specific optimizations
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Type definitions
    "types": [
      "bun-types",
      "@types/screeps"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build.ts"
  ]
}
